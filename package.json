{
  "name": "bv-match-web",
  "private": true,
  "version": "0.0.0",
  "author": "Augusto <augustotf93@gmail.com>",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "cross-env ELECTRON_DEV=true NODE_ENV=development concurrently -k -r \"vite --port 5173 --strictPort\" \"npm:dev:electron\"",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "tsc -b && vite build",
    "prebuild": "node scripts/copy-models.cjs",
    "dist:linux": "ELECTRON=1 npm run build && electron-builder --linux",
    "dist:win": "cross-env ELECTRON=1 CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --win --x64 --config.forceCodeSigning=false --config.win.signAndEditExecutable=false",
    "dist:mac": "ELECTRON=1 npm run build && electron-builder --mac",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-backend-wasm": "^4.22.0",
    "@vladmandic/face-api": "^1.7.15",
    "face-api.js": "^0.22.2",
    "lottie-react": "^2.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-static-copy": "^3.1.3",
    "wait-on": "^9.0.1"
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "forceCodeSigning": false,
    "appId": "com.bemviver.bv-match",
    "productName": "BV Match",
    "files": [
      "dist/**",
      "electron/main.cjs",
      "electron/preload.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/models",
        "to": "app/dist/models"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "identity": null,
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "extendInfo": {
        "LSBackgroundOnly": false,
        "NSCameraUsageDescription": "O aplicativo precisa acessar a c√¢mera para reconhecimento facial."
      }
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "signAndEditExecutable": false,
      "signExts": []
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
